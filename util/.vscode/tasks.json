{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build debug",
			"command": "gcc",
			"args": [
				"-g",
				"${file}", "-lregex", 
				"-std=c99",
				"-o",
				"${workspaceFolder}/tmp/${fileBasenameNoExtension}.exe",
				"-D_TEST_BINARY_TEXT",
				"-DNO_REGEX"
			],
			"options": {
				"cwd": ""
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		}
	]
}